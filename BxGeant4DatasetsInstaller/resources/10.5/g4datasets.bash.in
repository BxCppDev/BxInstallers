# -*- mode: shell-script; -*-

function g4datasets_setup()
{
    local _bx_g4datasets_version="__G4DATASETS_VERSION__"
    local _bx_g4datasets_install_dir="__G4DATASETS_INSTALL_DIR__"
    if [ -n "${BX_G4DATASETS_INSTALL_DIR}" ]; then
	echo >&2 "[warning] g4datasets_setup: Geant4 datasets version ${BX_G4DATASETS_VERSION} is already setup !"   
	return 1
    fi
    export BX_G4DATASETS_INSTALL_DIR="${_bx_g4datasets_install_dir}"
    export BX_G4DATASETS_VERSION="${_bx_g4datasets_version}"
    export BX_G4DATASETS_DATA_DIR=${BX_G4DATASETS_INSTALL_DIR}/share/Geant4Datasets-${_bx_g4datasets_version}/data
    export G4NEUTRONHPDATA=${BX_G4DATASETS_DATA_DIR}/G4NDL4.5
    export G4LEDATA=${BX_G4DATASETS_DATA_DIR}/G4EMLOW7.7
    export G4LEVELGAMMADATA=${BX_G4DATASETS_DATA_DIR}/PhotonEvaporation5.3
    export G4RADIOACTIVEDATA=${BX_G4DATASETS_DATA_DIR}/RadioactiveDecay5.3
    export G4PARTICLEXSDATA=${BX_G4DATASETS_DATA_DIR}/G4PARTICLEXS1.1
    export G4PIIDATA=${BX_G4DATASETS_DATA_DIR}/G4PII1.3
    export G4REALSURFACEDATA=${BX_G4DATASETS_DATA_DIR}/RealSurface2.1.1
    export G4SAIDXSDATA=${BX_G4DATASETS_DATA_DIR}/G4SAIDDATA2.0
    export G4ABLADATA=${BX_G4DATASETS_DATA_DIR}/G4ABLA3.1
    export G4INCLDATA=${BX_G4DATASETS_DATA_DIR}/G4INCL1.0
    export G4ENSDFSTATEDATA=${BX_G4DATASETS_DATA_DIR}/G4ENSDFSTATE2.2
    export PATH=${BX_G4DATASETS_INSTALL_DIR}/bin:${PATH}
    echo >&2 "[info] g4datasets_setup: Geant4 datasets version ${_bx_g4datasets_version} is now setup !"
    return 0
}
export -f g4datasets_setup

# end
